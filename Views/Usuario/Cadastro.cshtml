@model Usuario;
@{
    ViewData["Title"] = "Cadastro";
}

<form asp-action="Cadastro" method="post">
    <div>
        <label asp-for="Nome">Nome: </label>
        <input asp-for="Nome">
    </div>
    <div>
        <label asp-for="Login">Login: </label>
        <input asp-for="Login">
    </div>
    <div>
        <label asp-for="Senha">Senha </label>
        <input asp-for="Senha" type="password">
    </div>
    <div>
        <label asp-for="DataNascimento">Data Nascimento: </label>
        <input asp-for="DataNascimento" type="date">
    </div>
    <div>
        <input type="Submit" value="Enviar">
    </div>
</form>
<p>
    @ViewBag.Mensagem
</p>