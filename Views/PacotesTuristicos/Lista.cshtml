@model List<PacotesTuristicos>
@{
    ViewData["Title"] = "Lista";
}

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Origem</th>
            <th>Destino</th>
            <th>Atrativos</th>
            <th>Data Saida</th>
            <th>Retorno</th>
        </tr>
    </thead>

    @foreach (PacotesTuristicos p in Model)
    {
        <tr>
            <td>@p.Id</td>
            <td>@p.Nome</td>
            <td>@p.Origem</td>
            <td>@p.Destino</td>
            <td>@p.Atrativos</td>
            <td>@p.Saida</td>
            <td>@p.Retorno</td>
            <td>
                <a href="/PacotesTuristicos/Editar?Id=@p.Id">Alterar</a>
                <a href="/PacotesTuristicos/Remover?Id=@p.Id">Excluir</a>
            </td>
        </tr>
    }

</table>
